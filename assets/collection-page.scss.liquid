$primary: #3B1188;
$secondary:#FDE10D;
$darkblue: #061A2D;
$black: #000000;

//index-product-------------------------------------------------------------///
.collection_product{
   padding:50px 0;
  .title_wrapper{
    position:relative;
    margin-bottom:37px;
    @media (max-width:767px){
      padding:0 15px;
      margin-bottom:50px;
    }
    &::before{
      	content:'';
        position:absolute;
        left:0;
        top:50%;
        width:100%;
        transform:translateY(-50%);
        border-top: 1px solid #3B1188;
        z-index:1;
        @media (max-width:767px){
          	left:15px;
        	width:calc(100% - 30px );
        }      

      }
    h3{
    	font-size: 28px;
		line-height: 100%;
      	text-align:center;
      	text-transform: uppercase;
		max-width:40%;
      	width:fit-content;
        margin:auto;
        padding:0 40px;
        background:#fff;
        position:relative;
        z-index:2;
        @media (max-width:767px){
          max-width:65%;
          padding:0 20px;
        }
    }
  }
  .product_row_collection{
      display:flex;
      flex-wrap:wrap;
      @media (max-width:767px){
      	justify-content:space-between;
      }
      .product_box{
        position:relative;
        width:calc( 100% / 3 - 48px );
        margin:0 24px 53px;
        @media (max-width:767px){
        	width:calc( 100% / 2 - 7px );
          	margin:0 0 36px;
        }
        @media (max-width:375px){
        	width:100%;
          	margin:0 0 36px;
        }
        .img_box{
          position:relative;
          overflow:hidden;
          border-radius: 10px;
          margin-bottom:16px;
          &::before{
            content:'';
            padding-top:100%;
            display:block;
          }
          img{
            position:absolute;
            top:0;
            left:0;
            right:0;
            bottom:0;
            margin:auto;
            width:100%;
            object-fit:cover;
            object-position:center;

          }
          
        }
        .save_label{
          background: #D70000;
          border-radius: 254.327px;
          font-weight: bold;
          font-size: 14px;
          line-height: 100%;
          color: #FDEDF9;
          padding:9px 14px;
          min-width:95px;
          position:absolute;
          top:0;
          left:-36px;
          z-index:2;
          @media (max-width:767px){
          	top: -13px;
            left: -11px;
          }
        }
        .content_box{
          h4{
            a{
              font-weight: bold;
              font-size: 25px;
              line-height: 34px;
              letter-spacing: -0.01em;
              display:block;
              color:$darkblue;
              @media (max-width:767px){
                  font-size: 20px;
                  line-height: 100%;
              }
            }
          }
          .prod_price{
            margin:5px 0 10px;
            font-weight: 900;
            font-size: 20px;
            line-height: 27px;
            color:$darkblue;
            @media (max-width:767px){
                  font-size: 15px;
                  line-height: 20px;
              }
            .max-price{
              color: rgba(255, 7, 7, 0.74);
              text-decoration-line: line-through;
              margin-left:16px;
              @media (max-width:767px){
              	margin-left:5px;
              }
            }
          }
          .btn-primary{
            width:95%;
            margin-bottom:5px;
            font-weight: bold;
            font-size: 16px;
            line-height: 22px;
            letter-spacing: -0.01em;
            border-radius:10px;
            
          }
          .learn_more{
            display:inline-block;
            font-size:15px;
            text-decoration:underline;
            color:$primary;
            font-weight:700;
          }
        }
      }
  }
}

//modal
.modal_main_wrapper{
	position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    display: none;
    align-items: center;
    justify-content: center;
/*     background: rgba(#F5FCFF,.5); */
  	background: linear-gradient(180deg, rgba(174, 140, 242, 0.21) 0%, rgba(172, 214, 255, 0.21) 100%);
  	backdrop-filter: blur(14px);
    z-index: 99;
    .modal_content{
      max-width: 600px;
      background: #EEFAFF;
      padding: 25px 32px;
      width: 100%;
      border-radius: 5px;
      display: flex;
      flex-wrap: wrap;
      margin: 0 -15px 0;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      box-shadow: 0px 10px 97px rgba(0, 0, 0, 0.5);
      @media (max-width:767px){
      	width:60%;
        padding: 20px 15px;
        margin:0;
      }
      @media (max-width:576px){
      	width:70%;
      }
      @media (max-width:480px){
      	width:90%;
      }
      .modal_close {
          position: absolute;
          right: -16px;
          top: -16px;
          cursor: pointer;
          @media (max-width:767px){
            right: -13px;
          	top: -13px;
            svg{
              width:26px;
              height:26px;
            }
          }
      }
      .main_content{
      	display:flex;
        flex-wrap:wrap;
        .left_col{
          width:50%;
          @media (max-width:767px){
          	width:100%;
            order:2;
          }
          h3{
          	font-weight: 700;
            font-size: 28px;
            line-height: 38px;
            text-transform: capitalize;
            letter-spacing: -0.01em;
            margin-bottom:12px;
          }
          .swatch{
            margin-bottom:28px;
            .swatch-element{
                display:inline-block;
                margin-right:5px;
                position:relative;
                img{
                  display:none;
                }
                label{
                    width:27px;
                    height:27px;
                    border-radius:50%;
                    font-size:0;
                    display:block;
                    position:relative;
                    background-size:cover;
                    cursor:pointer;
                    &::before{
                      content:'';
                      position:absolute;
                      left:-2px;
                      top:-2px;
                      width:31px;
                      height:31px;
                      border-radius:50%;
                      border: 1px solid transparent;
                    }
                }
                input{
                  width:0;
                  height:0;
                  opacity:0;
                  position:absolute;
                  &:checked{
                     ~ label{
                      &::before{
                        border: 1px solid #AE8CF2;
                      }
                    }
                  }
                }
              }
            .swatch_div{
                font-size: 16px;
                line-height: 22px;
                color:$darkblue;
                margin-bottom:8px;
                span{
                  text-transform:uppercase;
                  font-weight:700;
                  margin-left:8px;
                }
            }
          }
          .btn_div{
            .btn-primary{
              font-weight: 700;
              font-size: 14px;
			  line-height: 19px;
              padding:12px 16px;
              text-transform: capitalize;
              display:flex;
              align-items:center;
              justify-content:center;
              width:100%;
              .price_span{
              	font-weight: bold;
                font-size: 14px;
                line-height: 19px;
                margin-left:20px;
                letter-spacing: -0.01em;
              }
              .save_label{
              	font-weight: bold;
                font-size: 10px;
                line-height: 100%;
                background: #D70000;
                color:#FDEDF9;
                border-radius:50px;
                display:inline-block;
               	padding: 6px 11px 6px;
                margin-left:7px;
              }
              
            }
          }
        }
        .right_content{
        	width:50%;
          	padding-left:30px;
          	@media (max-width:767px){
              width:100%;
              order:1;
              padding-left:0px;
              margin-bottom:20px;
            }
            img{
            	width:100%;
              	border-radius: 5px;
            }
          
        }
      }
    }
}
